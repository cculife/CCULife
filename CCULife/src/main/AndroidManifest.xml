<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.zankio.cculife"
    android:versionCode="8"
    android:versionName="1.2.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="org.zankio.cculife.ui.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity android:name="org.zankio.cculife.ui.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.Ecourse.CourseListActivity"
            android:label="@string/title_activity_course_list" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.Ecourse.CourseActivity"
            android:label="@string/title_activity_course" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.CourseSchedule.CourseTimeTableActivity"
            android:label="@string/title_activity_course_schedule" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.ScoreQuery.ScoreQueryActivity"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.CCUSchedule.CCUScheduleActivity"
            android:label="@string/title_activity_ccuschedule" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.AboutActivity"
            android:label="@string/title_activity_about" >
            <intent-filter>
                <action android:name="org.zankio.cculife.ui.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.zankio.cculife.ui.Ecourse.CourseClassmateActivity"
            android:label="@string/title_activity_course_classmate" >
        </activity>
    </application>

</manifest>
